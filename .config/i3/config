                active_workspace   #1f222d #1f222d #81a1c1 
                inactive_workspace #1f222d #1f222d #4c566a
                urgent_workspace   #1f222d #1f222d #ee829f
                binding_mode       #1f222d #81a1c1 #2e3440
        }
}





